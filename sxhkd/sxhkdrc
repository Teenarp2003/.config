# Reload sxhkdrc
super + shift + r
    pkill -usr1 -x sxhkd; notify-send 'SXHKD' 'Reloaded config'

# quit/restart bspcm
alt + shift + {q,r}
	bspc {quit,wm -r}; notify-send 'BSPWM' 'Reloaded config'
# open terminal
super + Return
	konsole
# open rofi-wifimenu	
super + shift + w
	wifimenu
# close app
alt + c
	bspc node -k
alt + x
	bspc node -c


alt + {t,ctrl + t,l,f}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f node -d} '^{1-9,10}'
# alternate between tiled and monocle layout
super + m
	bspc desktop -l next
# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# open browser
super + c
	google-chrome-stable
# open VScode
super + v
	code
# cycle between desktops
super + bracket{left,right}
	bspc desktop -f {prev,next}
# Focus the next/previous node in the current desktop:
alt + {_,shift +}Tab
	bspc node -f {next,prev}.local
#Sound Controls
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5% 
XF86AudioMute
    pactl set-sink-mute 0 toggle 
XF86AudioPlay
	playerctl --player=spotify play-pause
XF86AudioStop
	playerctl --player=spotify stop
XF86AudioPrev
	playerctl --player=spotify previous
XF86AudioNext
	playerctl --player=spotify next
super + s 
	env LD_PRELOAD=/usr/lib/spotify-adblock.so spotify %U

# Toggle floating
alt + d
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi
#Open File manager
super + e
	thunar
#rofi
super + a
	exec rofi -show drun
#spotify
super + s 
	flatpak run com.spotify.Client

# Move focused window to the next workspace and then switch to that workspace
super + shift + {Left,Right}
    set id $(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# Show help
super + slash
    sxhkd-help

# Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu \
        -location 1 \
        -m -3 \
        -no-show-icons \
        -theme-str '* \{ font: 10px; \}' \
        -theme-str 'listview \{ spacing: 0; \}' \
        -theme-str 'window \{ width: 20em; \}'
